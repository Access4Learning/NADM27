<DataObject name="Lesson">
	<Key>@RefId</Key>
	<EventsReported>true</EventsReported>
	<Item>
		<Element>Lesson</Element>
		<Description>
			<p>
        A series of Activities and LearningResources tied together under a particular topic or period of time to deliver a
        particular educational concept or skill.
      </p>
		</Description>
	</Item>
	<Item>
		<Attribute>RefId</Attribute>
		<Characteristics>M</Characteristics>
		<Description/>
		<Type ref="CommonTypes" name="RefIdType"/>
	</Item>
	
	<!--<Item>
		<Attribute>xml:lang</Attribute>
		<Characteristics>M</Characteristics>
		<Description>
			<p>The default language of the text used for the content in the Lesson.</p>
		</Description>
	</Item>-->
	
	<Item>
		<Element>SourceObjects</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/SourceObject</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>Reference to the source object.</p>
		</Description>
		<Type ref="CommonTypes" name="IdRefType"/>
	</Item>
	<Item>
		<Attribute>SIF_RefObject</Attribute>
		<Characteristics>M</Characteristics>
		<Description>
			<p>The type of learning object being referred to.</p>
		</Description>
		<Values>
			<Value>
				<Code>Assessment</Code>
			</Value>
			<Value>
				<Code>LearningResource</Code>
			</Value>
			<Value>
				<Code>Activity</Code>
			</Value>
			<Value>
				<Code>Lesson</Code>
			</Value>
		</Values>
	</Item>
	<Item>
		<Element>CurriculumStructures</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/CurriculumStructureRefId</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>A GUID reference to the parent CurriculumStructure object of this Lesson.</p>
		</Description>
		<Type ref="CommonTypes" name="IdRefType"/>
	</Item>
	<Item>
		<Element>SubjectArea</Element>
		<Characteristics>O</Characteristics>
		<Type ref="DataModel" name="SubjectArea"/>
	</Item>
	<Item>
		<Element>Title</Element>
		<Characteristics>M</Characteristics>
		<Description>
			<p>Name of lesson.</p>
		</Description>
		<Type name="xs:normalizedString"/>
	</Item>
	<Item>
		<Element>Duration</Element>
		<Characteristics>O</Characteristics>
		<Description>
			<p>Desired duration of the lesson</p>
		</Description>
		<Type name="xs:unsignedInt"/>
	</Item>
	<Item>
		<Attribute>Units</Attribute>
		<Characteristics>M</Characteristics>
		<Description>
			<p>Unit of time of the Duration value.</p>
		</Description>
		<Values>
			<Value>
				<Code>week</Code>
			</Value>
			<Value>
				<Code>day</Code>
			</Value>
			<Value>
				<Code>hour</Code>
			</Value>
			<Value>
				<Code>minute</Code>
			</Value>
			<Value>
				<Code>second</Code>
			</Value>
		</Values>
	</Item>
	<Item>
		<Element>Description</Element>
		<Characteristics>O</Characteristics>
		<Description>
			<p>Description of the lesson plan.</p>
		</Description>
		<Type name="xs:string"/>
	</Item>
	<Item>
		<Element>Procedure</Element>
		<Characteristics>O</Characteristics>
		<Description>
			<p>Text field to describe how to use and implement the lesson.</p>
		</Description>
		<Type name="xs:string"/>
	</Item>
	<Item>
		<Element>Strategies</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/Strategy</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>Teaching strategy used in this lesson plan.</p>
		</Description>
		<Type name="xs:normalizedString"/>
	</Item>
	<Item>
		<Element>LearningObjectives</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/LearningObjective</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>Description of learning objective(s) for this lesson, i.e., "Student will be able to use Pythagorean Theorem."&#x2014;equates to 'benchmark' or 'goal' or other terminology</p>
		</Description>
		<Type name="xs:string"/>
	</Item>
	<Item>
		<Element>SupportingActivities</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/ActivityRefId</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>Links to Activity objects that may support the lesson</p>
		</Description>
		<Type ref="CommonTypes" name="IdRefType"/>
	</Item>
	<Item>
		<Element>LearningStandards</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/LearningStandardItemRefId</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>Link to an associated LearningStandardItem. This allows for a single Lesson to be aligned to multiple standard statements.</p>
		</Description>
		<Type ref="CommonTypes" name="IdRefType"/>
	</Item>
	<Item>
		<Element>LearningResources</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/LearningResourceRefId</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>Link to an aligned LearningResource object.</p>
		</Description>
		<Type ref="CommonTypes" name="IdRefType"/>
	</Item>
	<Item>
		<Element>LessonSources</Element>
		<Characteristics>O</Characteristics>
		<List mode="List"/>
	</Item>
	<Item>
		<Element>/LessonSource</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>One or more sources for the lesson. This describes the lesson's origin.</p>
		</Description>
	</Item>
	<Item>
		<Element>//Author</Element>
		<Characteristics>OR</Characteristics>
		<Description>
			<p>For each source, the authors of the source.</p>
		</Description>
	</Item>
	<Item>
		<Element>///Name</Element>
		<Characteristics>O</Characteristics>
		<Description>
			<p>Name of the author.</p>
		</Description>
		<Type ref="DataModel" name="Name"/>
	</Item>
	<Item>
		<Element>///Organization</Element>
		<Characteristics>O</Characteristics>
		<Description>
			<p>Organization name.</p>
		</Description>
		<Type name="xs:normalizedString"/>
	</Item>
	<Item>
		<Element>///Address</Element>
		<Characteristics>O</Characteristics>
		<Description>
			<p>Address of the author.</p>
		</Description>
		<Type ref="DataModel" name="Address"/>
	</Item>
	<Item>
		<Element>///Email</Element>
		<Characteristics>O</Characteristics>
		<Description>
			<p>Email address of the author.</p>
		</Description>
		<Type ref="DataModel" name="Email"/>
	</Item>
	<Item>
		<Element>SIF_Metadata</Element>
		<Characteristics>O</Characteristics>
		<Type ref="DataModel" name="SIF_Metadata"/>
	</Item>
	<Item>
		<Element>SIF_ExtendedElements</Element>
		<Characteristics>O</Characteristics>
		<Type ref="DataModel" name="SIF_ExtendedElements"/>
	</Item>
	<xhtml:Example xmlns="">
		<Lesson RefId="6A6151B83273F352228C6411D0F09218" xml:lang="en">
			<SourceObjects>
